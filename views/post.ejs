<%- include('partials/header') -%>
<div class="container">

  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= post.title %></h2>
      <img class="img-fluid" src="<%= post.image%>" />
    </div>

    <div class="col-3 mt-5">
      <p><%= post.caption %></p>
      <p>$<%= post.price %></p>
      <% if(post.bloom.length>0) { %>
        <p>Includes: <%= post.bloom %> </p>
      <% } %>
      <button class="btn btn-outline-success name="<%= post._id %>">Add to Cart</button>
    </div>
    <div class="col-6 my-5">
      <a class="btn btn-outline-success" href="/feed">Keep smelling the Flowers</a>
    </div>
  </div>

</div>

<%- include('partials/footer') -%>
