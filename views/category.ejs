<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <div class="text-center d-flex" >
          <div class="text-center w-100">
            <h1 class="display-3 brown"><%=posts[0].category[0].toUpperCase() + posts[0].category.slice(1) %> Flowers</h1>
          </div>
        </div>
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a class="brown link-hover text-decoration-none" href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
              <p class="display-6 brown"><%= posts[i].title %></p>
              <div class="d-flex">
                <p><%= posts[i].caption %></p>
                <p class="ps-3">$<%= posts[i].price %></p>
              </div>
            </a>
            </li>
        <% } %>
        </ul>
    </div>
  </div>
<%- include('partials/footer') -%>
