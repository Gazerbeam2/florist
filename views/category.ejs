<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <h1 class="display-3 brown"><%=posts[0].category[0].toUpperCase() + posts[0].category.slice(1) %> Flowers</h1>
        <% for(var i=0; i<posts.length; i++) {%>
          <% if (posts[i].available==true) { %>
            <li class="col-6 justify-content-between mt-5">
              <a class="brown link-hover text-decoration-none" href="/post/<%= posts[i]._id%>">
                <img class="img-fluid" src="<%= posts[i].image%>">
                <p class="display-6 brown"><%= posts[i].title %></p>
                <div class="d-flex">
                  <p><%= posts[i].caption %></p>
                  <% if (posts[i].onSale==true) { %>
                    <p class="ps-3"><s>$<%=  Number.parseFloat(posts[i].price).toFixed(2) %></s></p> 
                    <p class="ps-3 text-success">$<%=  Number.parseFloat(posts[i].price - posts[i].discount).toFixed(2) %></p>                   
                  <% } else { %>
                    <p class="ps-3">$<%= Number.parseFloat(posts[i].price).toFixed(2) %></p> 
                  <% } %>
                </div>
              </a>
              </li>
          <% } %>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>